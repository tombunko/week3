{
	// Place your snippets for json here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

    "add a shebang": {
        //"scope": "sh",
        "prefix": "shebang",
        "body": [
            "#!/bin/bash",
        ],
        "description": "Add shebang to script"
    }

    ,"add a case statement": {
        //"scope": "sh",
        "prefix": "casestmt",
        "body": [
            "case $var in",
                "{1} )",
                    "# run code if case",
                    ";;",
                "{2} )",
                    "# run code if case",
                    ";;",  
                "{3} )",
                    "# run code if case",
                    ";;",
                "{4} )",
                    "# run code if case",
                    ";;",
                "*) #just in case",
                    "#code to run if not any case",
                    ";;",
            "esac",
        ],
        "description": "Adds the case statement structure"
    }
    
    ,"User Prompt": {
        //"scope": "sh",
        "prefix": "promptuser",
        "body": [
            "read -p '{user prompt}: ' var",
        ],
        "description": "add a user prompt"
    }    
    
    ,"Color-Black": {
